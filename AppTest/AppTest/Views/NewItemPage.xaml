<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="AppTest.Views.NewItemPage"
		     Title="Adicionar Item">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <!--Produto-->
            <Entry x:Name="Produto"
             Text="{Binding Pedido.Produto}"
             Placeholder="Produto" 
             Margin="0"
             FontSize="20"/>
            <!--Cliente-->
            <Entry x:Name="Cliente"
             Text="{Binding Pedido.Cliente}"
             Placeholder="Cliente" 
             Margin="0"
             FontSize="20"/>
            <!--Valor-->
            <Entry x:Name="Valor"
             Text="{Binding Pedido.Valor}"
             Placeholder="Valor" 
             Margin="0"
             FontSize="20"/>
            
            <Button Text="Tirar Foto" Clicked="TirarFoto" FontSize="20" />

            <Button Text="Escolher Foto" Clicked="EscolherFoto" FontSize="20" />

            <Image x:Name="MinhaImagem" 
                WidthRequest="400"
                HeightRequest="220"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
