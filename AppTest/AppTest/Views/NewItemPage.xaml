<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="AppTest.Views.NewItemPage"
		     Title="New Item">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Produto" FontSize="Medium" />
            <Editor Text="{Binding Pedido.Produto}" FontSize="Small" Margin="0" />
            <Label Text="Cliente" FontSize="Medium" />
            <Editor Text="{Binding Pedido.Cliente}" FontSize="Small" Margin="0" />
            <Label Text="Valor" FontSize="Medium" />
            <Editor Text="{Binding Pedido.Valor}" FontSize="Small" Margin="0" />
            <Button Text="Tirar Foto" Clicked="TirarFoto" FontSize="20" />

            <Button Text="Escolher Foto" Clicked="EscolherFoto" FontSize="20" />

            <Image x:Name="MinhaImagem" 
                WidthRequest="400"
                HeightRequest="220"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
